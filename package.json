{
  "name": "weather-agent-kd",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Weather agent using Mastra with MCP tools to upload tts audio files to mux.",
  "scripts": {
    "dev": "mastra dev",
    "build": "NODE_OPTIONS=--max-old-space-size=1024 npm run compile && NODE_OPTIONS=--max-old-space-size=1024 mastra build",
    "postbuild": "mkdir -p dist && cp -R files dist/files || true",
    "compile": "NODE_OPTIONS=--max-old-space-size=1024 tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "start": "NODE_OPTIONS=\"--disable-warning=DEP0169\" node --import=./.mastra/output/instrumentation.mjs .mastra/output/index.mjs",
    "start:telemetry": "NODE_OPTIONS=\"--disable-warning=DEP0169\" node --import=./.mastra/output/instrumentation.mjs .mastra/output/index.mjs",
    "start:production": "NODE_ENV=production NODE_OPTIONS=\"--disable-warning=DEP0169\" node --import=./.mastra/output/instrumentation.mjs .mastra/output/index.mjs",
    "start:custom": "node --max-old-space-size=512 dist/server.js",
    "typecheck": "tsc --noEmit",
    "test:claude": "npm run build && tsx src/mastra/scripts/test-claude.ts",
    "test:weather-agent": "npm run build && tsx src/mastra/scripts/test-weather-agent.ts",
    "test:stt": "npm run build && tsx src/mastra/scripts/test-stt.ts",
    "test:stt:deepgram": "npm run build && tsx src/mastra/scripts/test-stt.ts files/sample.wav deepgram",
    "test:stt:cartesia": "npm run build && tsx src/mastra/scripts/test-stt.ts files/sample.wav cartesia",
    "test:tts": "npm run build && tsx src/mastra/scripts/test-tts.ts",
    "test:tts:deepgram": "npm run build && tsx src/mastra/scripts/test-tts.ts \"Hello from Deepgram\" deepgram",
    "test:tts:cartesia": "npm run build && tsx src/mastra/scripts/test-tts.ts \"Hello from Cartesia\" cartesia",
    "test:zip": "npm run build && tsx src/mastra/scripts/test-zip.ts",
    "run:mux:upload:verify": "npm run build && tsx src/mastra/scripts/mux-upload-verify-real.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^0.0.56",
    "@mastra/chroma": "^0.11.9",
    "@mastra/core": "latest",
    "@mastra/mcp": "latest",
    "@mastra/memory": "^0.15.2",
    "ai": "^3.4.33",
    "dotenv": "^16.4.5",
    "ffmpeg-static": "^5.2.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "mastra": "latest",
    "ws": "^8.18.0",
    "zod": "^3.23.8",
    "@mux/mcp": "^12.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  }
}