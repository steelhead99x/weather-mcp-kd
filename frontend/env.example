# Frontend Environment Variables
# Copy this file to `.env` in the frontend directory
# Note: All frontend variables must be prefixed with VITE_

############################################
# Mastra API Configuration
############################################
# Backend API host (local development)
VITE_MASTRA_API_HOST=http://localhost:3001

# Backend API host (production) - uncomment for production builds
# VITE_MASTRA_API_HOST=https://stage-ai.streamingportfolio.com

# Weather agent ID (must match backend agent name)
VITE_WEATHER_AGENT_ID=weather

############################################
# Mux Video Configuration
############################################
# Default Mux asset ID for the player
VITE_MUX_ASSET_ID=00ixOU3x6YI02DXIzeQ00wEzTwAHyUojsiewp7fC4FNeNw
VITE_MUX_DEFAULT_ASSET_ID=00ixOU3x6YI02DXIzeQ00wEzTwAHyUojsiewp7fC4FNeNw

# Mux key server URL for signed playback tokens
VITE_MUX_KEY_SERVER_URL=https://streamingportfolio.com/streamingportfolio-mux-keyserver/api/tokens

############################################
# Environment
############################################
NODE_ENV=development
