{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "ts-node": {
    "preferTsExts": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/scripts", "src/mcp", "dist", "node_modules"]
}