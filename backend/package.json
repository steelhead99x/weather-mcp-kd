{
  "name": "weather-agent-backend",
  "version": "1.0.0",
  "description": "Mastra backend server for weather agent with MCP tools",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "mastra dev",
    "build": "NODE_OPTIONS=--max-old-space-size=2048 npm run compile",
    "compile": "NODE_OPTIONS=--max-old-space-size=2048 tsc --build --verbose",
    "clean": "rm -rf dist .mastra",
    "prebuild": "npm run clean",
    "start": "NODE_ENV=development npm run dev",
    "start:prod": "npm run build && npm run start:production",
    "start:production": "NODE_ENV=production node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test:agent": "npm run build && npx tsx src/scripts/test-weather-agent.ts",
    "test:claude": "npm run build && npx tsx src/scripts/test-claude.ts",
    "test:stt": "npm run build && npx tsx src/scripts/test-stt.ts",
    "test:tts": "npm run build && npx tsx src/scripts/test-tts.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@mastra/chroma": "^0.11.10",
    "@mastra/core": "^0.17.1",
    "@mastra/mcp": "^0.13.1",
    "@mastra/memory": "0.15.2",
    "@modelcontextprotocol/sdk": "1.11.5",
    "@mux/mcp": "^12.8.0",
    "ai": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "mastra": "0.13.1",
    "tsx": "^4.19.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20.19.17",
    "@types/ws": "^8.5.10",
    "typescript": "^5.6.3"
  }
}
